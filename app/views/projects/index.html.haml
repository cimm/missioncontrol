%section#projects
  .page-header
    %h1 Projects
  = link_to "New", new_project_path, :class => "btn"
  %table.zebra-striped
    %thead
      %tr
        %th Name
        %th Client
        %th Default rate
        %th
    %tbody
      - @projects.each do |project|
        %tr
          %td.name= project.name
          %td.nickname= project.client_nickname
          %td.default_rate
            - if project.default_rate
              â‚¬
              = project.default_rate
          %td= link_to "edit", edit_project_path(project), :id => "edit_project_#{project.id}", :class => "btn small"
