%section#expenses
  .page-header
    %h1 Expenses
  .subnav
    %ul.nav.nav-pills
      %li= link_to "All", expenses_path
      %li= link_to "Q1",  fiscal_quarter_path(1)
      %li= link_to "Q2",  fiscal_quarter_path(2)
      %li= link_to "Q3",  fiscal_quarter_path(3)
      %li= link_to "Q4",  fiscal_quarter_path(4)
  %table.table.table-striped
    %thead
      %tr
        %th Number
        %th Company
        %th Amount
        %th
    %tbody
      - @expenses.each do |expense|
        %tr
          %td.number= expense.number
          %td.company= expense.company
          %td.signed-amount= expense.signed_amount
          %td
            = link_to edit_expense_path(expense), :id => "edit_expense_#{expense.id}" do
              %i.icon-pencil
  = link_to "New", new_expense_path, :accesskey => 'n', :class => "btn"
